@page
@model RazorPages.Pages.Messages

@{
    ViewData["Title"] = "Messages";
}

<form>
    <div class="form-group">
        <input asp-for="Message" type="text" placeholder="your message"/>
        <button type="submit" class="btn btn-primary"> Submit </button>
    </div>
</form>

@{
    for (int i = 0; i < 5; i++)
    {
        <h2>@i</h2>
    }
}